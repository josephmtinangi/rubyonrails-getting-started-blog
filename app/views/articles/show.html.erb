<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<article>
				<h1><%= @article.title %></h1>
				<p>
					<%= @article.text %>
				</p>

				<h2>Comments</h2>
				<%= render @article.comments %>

				<h2>Add a comment:</h2>
				<%= render 'comments/form' %>
			</article>

			<%= link_to 'Edit', edit_article_path(@article) %> | 
			<%= link_to 'Back', articles_path %>
		</div>
	</div>
</div>