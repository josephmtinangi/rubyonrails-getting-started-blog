<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<article>
				<h1><%= @article.title %></h1>
				<p>
					<%= @article.text %>
				</p>
				<h2>Add a comment:</h2>
				<%= form_for([@article, @article.comments.build]) do |f| %>
					<div class="form-group">
						<%= f.label :commenter %>
						<%= f.text_field :commenter %>
					</div>
					<div class="form-group">
						<%= f.label :body %>
						<%= f.text_area :body %>
					</div>
					<%= f.submit %>
				<% end %>
			</article>

			<%= link_to 'Edit', edit_article_path(@article) %> | 
			<%= link_to 'Back', articles_path %>
		</div>
	</div>
</div>