<%= form_for([@article, @article.comments.build]) do |f| %>
	<div class="form-group">
		<%= f.label :commenter %>
		<%= f.text_field :commenter, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :body %>
		<%= f.text_area :body, class: "form-control" %>
	</div>
	<%= f.submit "Submit", :class => "btn btn-primary" %>
<% end %>